//=====================   relative scale  =========================//

group { name: "ewe/ruler/horizontal/dashes/relative";
   images.image: "ruler_relative.png" COMP;
   parts {
      part { name: "mark_bg";
         type: IMAGE;
         description { state: "default" 0.0;
            image {
               normal: "ruler_relative.png";
               border: 3 3 3 3;
            }
            rel1 {
               to: "ewe.text";
               offset: -3 0;
            }
            rel2 {
               to: "ewe.text";
               offset: 1 0;
            }
         }
      }
      part { name: "dash";
         type: RECT;
         description { state: "default" 0.0;
            color: 58 110 155 255;
            align: 0.0 1.0;
            min: 1 12;
            max: 1 12;
         }
      }
      part { name: "ewe.text";
         type: TEXT;
         scale: 1;
         description { state: "default" 0.0;
            align: 0.5 0.0;
            color: RULER_REL_MARKS_TEXT_COLOR;
            text {
               font: FN;
               size: 9;
               min: 1 1;
               max: 1 1;
               ellipsis: -1;
            }
            rel1 {
               offset: 0 2;
               to_x: "dash";
               relative: -0.5 0.0;
            }
            rel2 {
               to_x: "dash";
               relative: 0.5 0.0;
            }
         }
      }
   }
}

group { name: "ewe/ruler/vertical/dashes/relative";
   inherit: "ewe/ruler/horizontal/dashes/relative";
   parts {
      part { name: "dash";
         description { state: "default" 0.0;
            align: 1.0 0.0;
            min: 5 1;
            max: 5 1;
         }
      }
      part { name: "ewe.text";
         description { state: "default" 0.0;
            align: 1.0 0.5;
            rel1 {
               to_x: "";
               to_y: "dash";
               relative: 0.0 -0.5;
               offset: 0 -1;
            }
            rel2 {
               to: "dash";
               relative: 0.0 0.5;
            }
         }
      }
   }
}
