         }
      }
   }
}


//=====================   pointer marker  =========================//

group { name: "ewe/ruler/marker/horizontal/pointer";
   images.image: "cursor-position-ver.png" COMP;
   parts {
      part { name: "mark";
         type: IMAGE;
         description { state: "default" 0.0;
            image.normal: "cursor-position-ver.png";
            align: 0.5 1.0;
            rel1.relative: -0.5 0.0;
            rel2.relative: 0.5 1.0;
            min: 10 14;
            max: 10 14;
         }
      }
   }
}

group { name: "ewe/ruler/marker/vertical/pointer";
   images.image: "cursor-position-hor.png" COMP;
   parts {
      part { name: "mark";
         type: IMAGE;
         description { state: "default" 0.0;
            image.normal: "cursor-position-hor.png";
            align: 1.0 0.5;
            rel1.relative: 0.0 -0.5;
            rel1.offset: 0 2;
            rel2.relative: 1.0 0.5;
            min: 15 10;
            max: 15 10;
         }
      }
   }
}


//=====================   default scale  =========================//

#define ITEM(i, sz) \
part { name: "dash"#i; \
         type: RECT; \
         clip_to: "cliper"; \
         description { state: "default" 0.0; \
            color: RULER_DASHES_COLOR; \
            align: 0.0 1.0; \
            min: 1 sz; \
            max: 1 sz; \
            rel1.relative: 0.i 1.0; \
         } \
      }

group { name: "ewe/ruler/horizontal/dashes/default";
   parts {
      part { name: "cliper";
         type: RECT;
         description { state: "default" 0.0;
         }
      }
      part { name: "ewe.text";
         type: TEXT;
         scale: 1;
         description { state: "default" 0.0;
            fixed: 0 1;
            align: 0.0 1.0;
            color: RULER_MARKS_TEXT_COLOR;
            rel1 {
               to: "dash0";
               offset: -1 0;
            }
            rel2 {
               to_y: "dash0";
               relative: 0.0 0.0;
               offset: 10 -1;
            }
            text {
               font: FN;
               size: 9;
               min: 1 1;
               ellipsis: -1;
            }
         }
      }
      part { name: "ewe.middle.text";
         type: TEXT;
         scale: 1;
         description { state: "default" 0.0;
            fixed: 0 1;
            align: 0.0 1.0;
            color:RULER_MARKS_TEXT_COLOR;
            rel1 {
               to: "dash5";
               offset: -1 0;
            }
            rel2 {
               to_y: "dash5";
               relative: 0.0 0.0;
               offset: 10 -1;
            }
            text {
               font: FN;
               size: 9;
               min: 1 1;
               ellipsis: -1;
            }
         }
      }
      ITEM(0, 10);
      ITEM(1, 5);
      ITEM(2, 5);
      ITEM(3, 5);
      ITEM(4, 5);
      ITEM(5, 7);
      ITEM(6, 5);
      ITEM(7, 5);
      ITEM(8, 5);
      ITEM(9, 5);
   }
}
#undef ITEM

#define ITEM_VER(i, sz) \
part { name: "dash"#i; \
         type: RECT; \
         clip_to: "cliper"; \
         description { state: "default" 0.0; \
            color: RULER_DASHES_COLOR; \
            align: 1.0 0.0; \
            min: sz 1; \
            max: sz 1; \
            rel1.relative: 1.0 0.i; \
         } \
      }

group { name: "ewe/ruler/vertical/dashes/default";
   inherit: "ewe/ruler/horizontal/dashes/default";
   parts {
      part { name: "ewe.text";
         description { state: "default" 0.0;
            align: 1.0 0.0;
            rel1 {
               to: "dash0";
               relative: 1.0 0.0;
               offset: -5 1;
            }
            rel2 {
               to: "dash0";
               offset: -1 10;
            }
         }
      }
      part { name: "ewe.middle.text";
         description { state: "default" 0.0;
            align: 1.0 0.0;
            rel1 {
               to: "dash5";
               relative: 0.0 0.0;
               offset: -5 1;
            }
            rel2 {
               to_x: "dash5";
               relative: 0.0 0.0;
               offset: 0 1;
            }
         }
      }
      ITEM_VER(0, 10);
      ITEM_VER(1, 5);
      ITEM_VER(2, 5);
      ITEM_VER(3, 5);
      ITEM_VER(4, 5);
      ITEM_VER(5, 7);
      ITEM_VER(6, 5);
      ITEM_VER(7, 5);
      ITEM_VER(8, 5);
      ITEM_VER(9, 5);
   }
}
#undef ITEM_VER


